<Page x:Class="GraphicTool.Gallery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphicTool"
      mc:Ignorable="d" 
      d:DesignHeight="959" d:DesignWidth="1920"
      Title="Gallery">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True" Margin="0,0,0,0" >
            <StackPanel>
                <StackPanel x:Name="stack_to_add" VerticalAlignment="Top" Orientation="Horizontal" Margin="80,20,80,0" Height="450" ></StackPanel>
                <StackPanel x:Name="stack_to_add1" VerticalAlignment="Top" Orientation="Horizontal" Margin="80,20,80,0" Height="450" ></StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
